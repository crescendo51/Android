<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="16dp">
    <!--LinearLayout의 기본 배치 방향은 horizontal(가로) 배치 기본 배치 방식을 바꾸기 위해서는 orientation 속성을 이용해 배치 방향을 vertical로 변경 해주어야힘-->

    <!-- java, kotlin 에서 작동하기위하여 속성명이 따로 필요함 사용자에의해 작동되게 하려면 아이디 필수    -->
    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/panda1"
        android:background="@drawable/ic_launcher_background"
        android:layout_marginBottom="16dp"
        android:scaleType="centerInside"/>

    <Button
        android:id = "@+id/btn01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="panda1"
        />
    <Button
        android:id = "@+id/btn02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="panda2"
        />
    <Button
        android:id = "@+id/btn03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="panda3"
        />
    <Button
        android:id = "@+id/btn04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="panda4"
        />


    <!--이미지뷰 사용할때 뷰크기에 Wrap_content를 지정할때 : 원본 이미지의 크기가 기준이됨 -->
    <!-- 이때 실제 보이는 이미지의 사이즈로 이미지 뷰의 크기를 조절해주는 속성    -->

    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:src="@drawable/panda5"
        android:adjustViewBounds="true"/>
</LinearLayout>